# 第三方库的pod安装


source 'https://github.com/CocoaPods/Specs.git'
platform :ios, ‘8.0’
use_frameworks!

target ‘MusicCamera’  do 

# （网络访问）3.4版本的对应到swift2.2的语法更新
pod 'Alamofire', '~> 4.3’

# （日志记录）4.0.0版本的对应到swift3的语法更新
pod 'XCGLogger', '~> 4.0.0'

#（对网络访问和实例转化间的扩展）
pod 'AlamofireObjectMapper', '~> 4.0'

# （json和实例对象间的映射）1.3 没说具体的需要哪个版本
pod 'ObjectMapper', '~> 2.2'

pod 'SwiftyJSON', '~> 3.1.4’


# UI 绑定 实现mvvm

pod 'ReactiveCocoa', '~> 5.0.0'

#空的数据表格，仿DZNEmptyDataSet
pod 'EmptyKit', '~> 3.0.2'


## 图片加载
pod 'Kingfisher', '~> 3.0'
## 自动布局
pod 'SnapKit', '~> 3.0.0'
## 加载蒙版
pod 'MBProgressHUD', '~> 1.0.0'
## 刷新组件
pod 'MJRefresh', '~> 3.1.10'
## 动画特效
pod 'pop', '~> 1.0'
## 音频播放
pod 'StreamingKit', '~> 0.1.29'
## 倒影
pod 'ReflectionView', '~> 1.2'

pod 'EVReflection', :git => 'https://github.com/evermeer/EVReflection', :branch => 'Swift3'

end

#target ‘MusicCameraTests’ do


#end




target ‘MusicCameraUITests’  do 



end